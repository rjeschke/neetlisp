(ns 'core)

(defmacro defn (n & rest)
  `(def ~n (fn ~n ~@rest)))
  
(defmacro if-not (cond then else)
  `(if ~cond
       ~else
       ~then))

(defmacro when (cond body & rest)
  `(if ~cond
       (do
         ~body
         ~@rest)
       nil))

(defmacro when-not (cond body & rest)
  `(if-not ~cond
       (do
         ~body
         ~@rest)
       nil))

(defmacro do-seq (f xs)
  `(do
     (reduce (fn (a b) (a b) a)
             ~f
             ~xs)
     nil))

"neetlisp.nlsp.core_macros loaded"
