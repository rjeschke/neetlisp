(ns 'sanity.checks)

(prn "Running sanity checks ...")

(def x 
     10)

(assert "Def num" 
        (= 10 x))

(assert "Basic closures" 
        (== ((constantly true)) true))

(assert "Complex closures"
        (= 200 
           ((let (x 10 y 20)
             (fn ()
                 (let (z x w y)
                   (* z w))))))) 

(assert "Complex closures, varying"
        (= 200 
           ((let (x 10 y 20)
             (fn ()
                 (let (z y w x)
                   (* w z))))))) 

(assert "More complex closures"
        (= 600 
           ((let (x 10 y 20)
             (fn (a)
                 (let (z x w y)
                   (* a z w)))) 3))) 

(def xs 
     '(1 2 3 4 5))

(assert "Seq:first"
        (= 1 
           (first xs)))

(assert "Seq:next"
        (= 2 
           (next xs)))

(prn "... all sane.")
